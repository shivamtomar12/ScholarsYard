<%= form_for @survey do |f| %>
  
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <%= f.fields_for :questions do |builder| %>
    <p>
    <hr />
    <%= builder.label :content, "Questions" %>
    <%= builder.text_area :content, :rows => 3 %><br />
    <%= builder.check_box :_destroy %>
    <%= builder.label :_destroy, "Remove Question" %><br />
    </p>
  <% end %>
  <p><%= f.submit %></p>
<% end %>
