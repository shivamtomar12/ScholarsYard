-# in app/views/quizs/show.html.haml


%h2 #{@quiz.name}

= form_tag quizs_path, :method => :post do
  %ul#details
    - @x=0  
    - @y=0
    - @quiz.questions.each do |question| 
      %h3= question.content
      - @x=@x+1
      - for answer in question.answers
        = radio_button_tag @x,answer.content
        #{answer.content} <br />
  = submit_tag 'Submit'
= link_to 'Back to quiz list', quizs_path







