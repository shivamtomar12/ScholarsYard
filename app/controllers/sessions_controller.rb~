class SessionsController < Devise::SessionsController
   def new
     super

   end

   def create
     super
     hash=User.find_by_email(current_user.email)
     session[:user_type]=hash.user_type
     
     
   end
  def admin_create
     hash=User.find_by_email(current_user.email)
     session[:user_type]=hash.user_type
     if(session[:user_type]=='admin')
      redirect_to admin_path
     end
  end
end
